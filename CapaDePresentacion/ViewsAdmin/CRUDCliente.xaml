                                                Margin="10,0"
                                                />
                    <TextBlock x:Name="txtBotonCrear"
                               Grid.Column="1"
                               Text="Crear cliente"
                               FontWeight="Normal"
                               FontSize="12.5"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0"
                               FontFamily="Segoe UI"/>
                </Grid>
            </Button>

            <!--#endregion-->

            <!--#region BOTON ACTUALIZAR-->
            <Button x:Name="BtnActualizar"
                    Grid.Column="4"
                    Grid.Row="20"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
