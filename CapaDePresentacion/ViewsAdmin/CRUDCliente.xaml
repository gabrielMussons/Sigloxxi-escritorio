                       Grid.Row="4"
                       Margin="5,0,0,0"
                       Text="Rut"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       />
            <TextBox x:Name="txtRut"
                     Grid.Row="4"
