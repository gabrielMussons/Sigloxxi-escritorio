            <TextBox x:Name="txtDireccion"
                     Grid.Row="16"
                     Grid.Column="2"
                     VerticalAlignment="Center"
                     mah:TextBoxHelper.Watermark="Ingrese dirección"/>
            
            
            <!--#region IMAGEN-->
