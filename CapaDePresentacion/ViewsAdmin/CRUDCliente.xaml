                       VerticalAlignment="Center"/>
            <TextBox x:Name="txtNombre"
                     Grid.Row="6"
                     Grid.Column="2"
                     VerticalAlignment="Center"
                     mah:TextBoxHelper.Watermark="Ingrese nombre"/>
            <TextBlock Grid.Column="1"
                       Grid.Row="8"
                       Margin="5,0,0,0"
                       Text="Apellido Paterno"
