                               FontWeight="Normal"
                               FontSize="12.5"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0"
                               FontFamily="Segoe UI"/>
                </Grid>
            </Button>
            <!--#endregion-->

            <!--#region BOTON ELIMINAR-->
            <Button x:Name="BtnEliminar"
                    Grid.Column="4"
                    Grid.Row="22"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    Visibility="Visible" 
                    Height="25"
                    Background="#f72f1e"  
                    BorderBrush="#b13228"
                    BorderThickness="1.3"
                    Margin="0"
                    Style="{DynamicResource BTNMENU}"
                    Click="BtnEliminar_Click"
                    Foreground="White"
                    Width="220"
                    
                    >
                <!-- Color para boton agregar nuevo mas oscuro = #7fba00 o  claro = #78b000 --> 
                <Grid Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <iconPack:PackIconMaterial  Kind="TrashCan"
                                                Height="14"
                                                Grid.Column="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="10,0"
                                                />
                    <TextBlock x:Name="txtBotonEliminar"
                               Grid.Column="1"
                               Text="Eliminar cliente"
                               FontWeight="Normal"
                               FontSize="12.5"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0"
                               FontFamily="Segoe UI"/>
                </Grid>
            </Button>
            
            <!--#region BOTON ELIMINAR USUARIO-->
            <Button x:Name="BtnEliminarUsuario"
                    Grid.Column="4"
                    Grid.Row="24"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Cursor="Hand"
                    Visibility="Visible" 
                    Height="25"
                    Background="#f72f1e"  
                    BorderBrush="#b13228"
                    BorderThickness="1.3"
                    Margin="0"
                    Style="{DynamicResource BTNMENU}"
                    Foreground="White"
                    Width="220" Click="BtnEliminarUsuario_Click"
                    
                    >
                <Grid Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <iconPack:PackIconMaterial  Kind="AccountCancel"
                                                Height="14"
                                                Grid.Column="0"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Margin="10,0"
                                                />
                    <TextBlock x:Name="txtBtnEliminarUsuario"
                               Grid.Column="1"
                               Text="Eliminar usuario"
                               FontWeight="Normal"
                               FontSize="12.5"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"
                               Margin="0"
                               FontFamily="Segoe UI"/>
                </Grid>
            </Button>
            <!--#endregion-->
            
            <!--#region BOTON SELECCIONAR IMAGEN-->
