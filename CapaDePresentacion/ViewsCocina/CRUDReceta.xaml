                                        Binding="{Binding INSUMO}"/>
                    <DataGridTextColumn Header="Cantidad"
                                        Width="*"
                                        Binding="{Binding CANTIDAD}"/>
                    <DataGridTextColumn Header="Medida"
                                        Width="*"
                                        Binding="{Binding MEDIDA}"/>
                    <DataGridTemplateColumn Header="Opciones"
                                            Width="80"
                                            >
